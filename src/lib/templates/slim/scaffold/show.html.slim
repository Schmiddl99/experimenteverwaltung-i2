.page-header
  = link_to <%= index_helper %>_path, class: 'btn btn-secondary float-right' do
    = raw "#{icon("fas", "angle-left")} #{t('activerecord.models.<%= singular_table_name %>', default: "<%= singular_table_name.humanize %>")} #{t('interface.index')}"
  = link_to edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: 'btn btn-primary float-right' do
    = raw "#{icon("fas", "angle-left")} #{t('activerecord.models.<%= singular_table_name %>', default: "#{icon("fas", "edit")} <%= singular_table_name.humanize %>")} #{t('interface.edit')}"
dl.dl-horizontal
<%- for attribute in attributes -%>
  dt
    | <%= attribute.human_name %>:
  dd
    = @<%= singular_table_name %>.<%= attribute.name %>
<%- end -%>
