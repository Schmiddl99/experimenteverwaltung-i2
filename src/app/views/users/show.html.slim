.card
  .card-header
    | Account Informationen
    - if "#{current_user.role}" == "admin"  
      .float-right
        = link_to icon("fas", "pencil-alt").html_safe, edit_user_path("#{current_user.id}"), class: " btn btn-secondary btn-hover--jade"
  .card-body
    .list-group
      .list-group-item
        b.float-left
          | Name:
        .text-center
          ="#{current_user.name}"
      .list-group-item
        b.float-left
          | Username:
        .text-center
          ="#{current_user.username}"
      .list-group-item
        b.float-left
          | Role:
        .text-center
          = t("activerecord.user.#{current_user.role}")
      .list-group-item
        b.float-left
          | Active:
        .text-center
          -if current_user.active == true
            = "Aktiv"
          -else
            = "Inaktiv"
